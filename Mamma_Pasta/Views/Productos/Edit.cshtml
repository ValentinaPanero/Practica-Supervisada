@model Mamma_Pasta.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<br />
<h4>Producto</h4>
<hr />
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row mb-3">
                    <label asp-for="Nombre" class="col-sm-3 col-form-label">Nombre:</label>
                    <div class="col-sm-9">
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Descripcion" class="col-sm-3 col-form-label">Descripción:</label>
                    <div class="col-sm-9">
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="TipoProductoId" class="col-sm-3 col-form-label">Tipo:</label>
                    <div class="col-sm-9">
                        <select asp-for="TipoProductoId" class="form-control" asp-items="ViewBag.TipoProductoId"></select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Precio" class="col-sm-3 col-form-label">Precio:</label>
                    <div class="col-sm-9">
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Imagen" class="col-sm-3 col-form-label">Imagen:</label>
                    <div class="col-sm-9">
                        <input type="file" id="Imagen" name="Imagen" class="form-control" />
                        @if (!string.IsNullOrEmpty(Model.Imagen))
                        {
                            <div class="mt-2">
                                <img src="~/Imagenes/Productos/@Model.Imagen" alt="Imagen del producto" class="img-thumbnail" style="max-width: 150px;" />
                            </div>
                        }
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-warning btn-block">Crear</button>
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-warning">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
